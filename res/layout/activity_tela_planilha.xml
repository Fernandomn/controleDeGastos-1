<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPlanilha" 
    android:background="@color/black"
    android:orientation="vertical"
    android:id="@+id/layout_planilha">
    
    <TextView
        android:id="@+id/txv_nome_planilha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:textSize="27sp"       
        android:layout_marginTop="125dp" />
    
    <Button
     android:id="@+id/btn_cadastrar_ganho"
     android:layout_height="35dp"
     android:layout_width="match_parent"
     android:text="@string/btn_cadastro_ganho"
     android:layout_gravity="center_horizontal"
     android:onClick="IrCadastrarGanho"
     android:background="@color/light_green"
     android:layout_margin="5dp"
     android:padding="5dp"
     />
    
    <Button
     android:id="@+id/btn_cadatrar_gasto"
     android:layout_height="35dp"
     android:layout_width="match_parent"
     android:text="@string/btn_cadastro_gasto"
     android:layout_gravity="center_horizontal"
     android:onClick="IrCadastrarGasto"
     android:background="@color/light_green"
     android:layout_margin="5dp"
     android:padding="5dp"
     />
    
    <Button
     android:id="@+id/btn_relatorios"
     android:layout_height="35dp"
     android:layout_width="match_parent"
     android:text="RelatÃ³rios"
     android:layout_gravity="center_horizontal"
     android:onClick="irRelatorio"
     android:background="@color/light_green"
     android:layout_margin="5dp"
     android:padding="5dp"
     />
    <Button
     android:id="@+id/btn_voltar"
     android:layout_height="35dp"
     android:layout_width="match_parent"
     android:text="voltar"
     android:layout_gravity="center_horizontal"
     android:onClick="Voltar"
     android:background="@color/light_green"
     android:layout_margin="5dp"
     android:padding="5dp"
     />

</LinearLayout>